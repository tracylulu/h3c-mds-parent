<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.h3c.mds.dept.dao.view_DeptOperationLogMapper">
  <select id="getList" parameterType="java.util.Map"
		resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from view_DeptOperationLog

		<where>
			<if test="param.searchStr != null and param.searchStr != ''">

				CHARINDEX(#{param.searchStr},opttype+Code+Operator+DeptName+OptTypeName+OldValue+NewValue)>0
			</if>
			<if test="param.code != null and param.code != ''">
				and code=#{param.code}

			</if>
			<if test="param.id != null and param.id != ''">
				and id=#{param.id}

			</if>
		</where>
	order by OptTime desc
	</select>
</mapper>